pipeline {
    agent any

    tools {
        maven 'maven' // AsegÃºrate de tener configurado Maven con este nombre
    }

    stages {

        stage('Check Maven & Workspace') {
            steps {
                echo 'ğŸ” Verificando entorno Maven y contenido del workspace...'
                bat 'where mvn'
                bat 'mvn -v'
                bat 'dir'
            }
        }

        stage('Clean Previous Artifacts') {
            steps {
                echo 'ğŸ§¹ Limpiando carpetas antiguas...'
                bat '''
                if exist target (
                     del /q /s target\\*.* > nul
                )
                if exist allure-report (
                    del /q /s allure-report\\*.* > nul
                )
               '''
            }
        }

        stage('Build') {
            steps {
                echo 'ğŸ› ï¸ Compilando el proyecto (sin ejecutar tests)...'
                bat 'mvn clean install -DskipTests=true'
            }
        }

        stage('Sanity API Tests') {
            steps {
                echo 'âœ… Ejecutando pruebas SANITY...'
                bat 'mvn test -Dsurefire.suiteXmlFiles=src/test/resources/testrunners/testng_sanity.xml -Denv=prod'
            }
        }

        stage('Regression API Tests') {
            steps {
                echo 'ğŸ” Ejecutando pruebas REGRESSION...'
                bat 'mvn test -Dsurefire.suiteXmlFiles=src/test/resources/testrunners/testng_regression.xml -Denv=prod'
            }
        }

        stage('Publicar Allure Report') {
            steps {
                echo 'ğŸ“Š Generando reporte Allure...'
                allure([
                    includeProperties: false,
                    jdk: '',
                    properties: [],
                    reportBuildPolicy: 'ALWAYS',
                    results: [[path: 'allure-results']]
                ])
            }
        }

        stage('Publicar HTML ChainTest Report') {
            steps {
                echo 'ğŸ§¾ Publicando reporte HTML ChainTest...'
                publishHTML([
                    allowMissing: false,
                    alwaysLinkToLastBuild: false,
                    keepAll: true,
                    reportDir: 'target/chaintest',
                    reportFiles: 'Index.html',
                    reportName: 'HTML API Regression ChainTest Report',
                    reportTitles: ''
                ])
            }
        }
    }
}